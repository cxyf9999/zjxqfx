/* assignment-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载和错误状态 */
.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
  color: #666;
}

.retry-btn {
  margin-top: 20rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #e5e5e5;
}

.back-btn {
  display: flex;
  align-items: center;
  color: #007aff;
  font-size: 32rpx;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.placeholder {
  width: 120rpx;
}

/* 信息卡片通用样式 */
.assignment-info, .student-info, .score-info {
  margin: 20rpx 30rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.info-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #f8f9fa;
  border-bottom: 1rpx solid #e5e5e5;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.edit-btn {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
}

.info-content {
  padding: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 30rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  min-width: 160rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  font-weight: 500;
  flex: 1;
}

/* 成绩信息特殊样式 */
.score-summary {
  margin-bottom: 30rpx;
}

.total-score {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: white;
}

.score-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.score-value {
  font-size: 48rpx;
  font-weight: bold;
}

.score-rate {
  font-size: 28rpx;
  opacity: 0.9;
}

.sub-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.score-list {
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.score-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 28rpx;
}

.score-item:last-child {
  border-bottom: none;
}

.question-label {
  color: #666;
}

.question-score {
  color: #333;
  font-weight: 500;
}

.comment {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #e5e5e5;
}

.comment-text {
  display: block;
  margin-top: 16rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
}

.grade-time {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.time-label {
  color: #666;
  margin-right: 16rpx;
}

.time-value {
  color: #999;
}

/* 未批改状态 */
.no-score {
  text-align: center;
  padding: 60rpx 30rpx;
}

.no-score-text {
  display: block;
  color: #999;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}

.grade-btn {
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}
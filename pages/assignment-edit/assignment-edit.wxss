/* assignment-edit.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.assignment-info {
  flex: 1;
}

.assignment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.assignment-meta {
  font-size: 28rpx;
  color: #666;
}

.edit-status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #e8f5e8;
}

.edit-status.warning {
  background: #fff3e0;
}

.edit-status.readonly {
  background: #ffebee;
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #4CAF50;
}

.status-text.warning {
  color: #FF9800;
}

.status-text.readonly {
  color: #f44336;
}

/* 权限提示 */
.permission-notice {
  display: flex;
  align-items: center;
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.notice-text {
  flex: 1;
  font-size: 28rpx;
  color: #856404;
}

/* 题目结构区域 */
.question-structure {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-actions {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.btn-small {
  padding: 15rpx 25rpx !important;
  font-size: 26rpx !important;
  min-width: 120rpx;
  height: auto;
}

/* 题目列表 */
.question-list {
  margin-top: 20rpx;
}

.question-item {
  margin-bottom: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
}

.question-item.level1 {
  border-color: #4CAF50;
}

.question-header {
  display: flex;
  align-items: center;
  padding: 10rpx 12rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e0e0e0;
  min-width: 0;
  width: 100%;
  box-sizing: border-box;
}

.question-item.level1 .question-header {
  background: #e8f5e8;
}

.question-number {
  font-size: 26rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-right: 12rpx;
  min-width: 50rpx;
  flex-shrink: 0;
}

.question-content {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  min-width: 0;
  overflow: hidden;
}

.question-title-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
  min-width: 0;
  text-overflow: ellipsis;
  width: 32rpx;
}

.question-title-input:disabled {
  color: #999;
  background: #f5f5f5;
  cursor: not-allowed;
  width: 32rpx;
}

.score-input:disabled {
  color: #999;
  background: #f5f5f5;
  cursor: not-allowed;
  border-color: #e0e0e0;
}

.question-score {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 25rpx;
  color: #666;
  font-weight: bold;
  flex-shrink: 0;
  white-space: nowrap;
}

.score-input {
  width: 70rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 6rpx;
  font-size: 22rpx;
  flex-shrink: 0;
}

.question-actions {
  display: flex;
  gap: 6rpx;
  align-items: center;
  margin-left: 20rpx;
  flex-shrink: 0;
  width: 50rpx;
  justify-content: flex-end;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  min-width: 32rpx;
  min-height: 32rpx;
  border-radius: 0%;
  border: 1rpx solid #ddd;
  background: white;
  font-size: 16rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.btn-icon:hover {
  background: #f0f0f0;
}

.btn-icon.delete {
  color: #f44336;
  border-color: #f44336;
  width: 32rpx;
}

.btn-icon.delete:hover {
  background: #ffebee;
}

/* 子题目 */
.sub-questions {
  padding: 20rpx;
}

.sub-questions.level2 {
  background: #fafafa;
}

.sub-questions.level3 {
  background: #f0f0f0;
  margin-left: 40rpx;
  border-radius: 8rpx;
  margin-top: 15rpx;
}

.sub-question-item {
  margin-bottom: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.sub-questions.level2 .sub-question-item {
  border-color: #2196F3;
}

.sub-questions.level3 .sub-question-item {
  border-color: #FF9800;
}

.sub-questions.level2 .question-header {
  background: #e3f2fd;
}

.sub-questions.level3 .question-header {
  background: #fff3e0;
}

.sub-questions.level2 .question-number {
  color: #2196F3;
}

.sub-questions.level3 .question-number {
  color: #FF9800;
}

.btn-add-sub {
  width: 100%;
  padding: 18rpx;
  background: #f8f9fa;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  color: #666;
  font-size: 24rpx;
  margin-top: 15rpx;
  transition: all 0.2s ease;
}

.btn-add-sub:hover {
  background: #e9ecef;
  border-color: #4CAF50;
  color: #4CAF50;
}

/* 总分显示 */
.total-score {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.total-label {
  font-size: 32rpx;
  color: #666;
}

.total-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-left: 10rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
}

.btn-primary, .btn-secondary {
  flex: 1;
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
}

.btn-primary {
  background: #4CAF50;
  color: white;
}

.btn-primary.disabled {
  background: #ccc !important;
  color: #999 !important;
  cursor: not-allowed;
}

.btn-secondary {
  background: white;
  color: #666;
  border: 2rpx solid #ddd;
}

.btn-primary:hover:not(.disabled) {
  background: #45a049;
}

.btn-secondary:hover {
  background: #f8f9fa;
}

/* 确认对话框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-actions .btn-primary,
.modal-actions .btn-secondary {
  flex: 1;
  margin: 0;
  border-radius: 0;
  border: none;
  padding: 30rpx;
}

.modal-actions .btn-secondary {
  border-right: 1rpx solid #eee;
}